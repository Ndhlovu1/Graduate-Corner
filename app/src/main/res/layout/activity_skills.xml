<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:id="@+id/skillsDrawer"
    android:background="@drawable/white_bg"
    tools:context=".skills_building.SkillsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include
        layout="@layout/main_toolbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROGRAMMING BOOKS"
            android:textSize="24sp"
            android:textColor="@color/black_two"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="PROGRAMMING GAMES WITH C#"
            android:background="@color/purple_200"
            android:id="@+id/programming_book"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="JAVA FOR WEB DEVELOPMENT"
            android:background="#440098"
            android:id="@+id/programming_book2"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="FULL STACK ANGULAJS FOR JAVA DEVELOPERS"
            android:background="@color/purple_200"
            android:id="@+id/programming_book3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FINANCIAL LITERACY BOOKS"
            android:textSize="24sp"
            android:textColor="@color/black_two"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="HABITS OF EFFECTIVE PEOPLE"
            android:id="@+id/finance_book"
            android:background="@color/purple_200"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="BLACK BILLIONAIRE SECRETS"
            android:id="@+id/finance_book2"
            android:background="@color/purple_200"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="EMOTIONAL INTELLIGENCE"
            android:id="@+id/finance_book3"
            android:background="@color/purple_200"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/main_nav_drawer"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>