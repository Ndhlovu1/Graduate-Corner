<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/white_bg"
    tools:context=".users.RegisterActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/logo2"
        tools:ignore="ContentDescription"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editxt_background"
        android:hint="Last Name and First Name e.g. Daphne Cecil"
        android:layout_marginTop="15dp"
        android:id="@+id/fullname"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#433F3F"
        android:autofillHints=""
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editxt_background"
        android:hint="Email Address"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:textColor="@color/black"
        android:textColorHint="#433F3F"
        android:padding="10dp"
        android:autofillHints="" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editxt_background"
        android:hint="Your Institution"
        android:layout_marginTop="15dp"
        android:id="@+id/institution"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#433F3F"
        android:autofillHints=""
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editxt_background"
        android:hint="Cellphone Number"
        android:layout_marginTop="15dp"
        android:id="@+id/cellphone"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#433F3F"
        android:autofillHints=""
        android:inputType="phone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editxt_background"
        android:hint="Your Password"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#433F3F"
        android:autofillHints="" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign in."
        android:id="@+id/txt_login"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp" />


</LinearLayout>